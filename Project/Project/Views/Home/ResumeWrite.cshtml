@model WebMiniProject.Models.Resume

@{
    ViewData["Title"] = "ResumeWrite";
}
<style>
h1{
        font-family:'Hakgyoansim Wooju';
        font-display:auto;
        font-synthesis-style:auto;
    }
</style>

<h1 class="fw-bolder text-primary text-center">기업 이력서 작성</h1>

<h4>아래 기입란에 작성부탁드립니다.</h4>
<hr />

<form asp-action="ResumeWrite">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="OneLine" class="control-label" >제목 : </label>
        </div>
        <div class="col-auto">
            <input asp-for="OneLine" class="form-control" size="40"/>
        </div>

        <div class="col-auto">
            <label asp-for="CorporationName" class="control-label">지원기업 : </label>
        </div>
        <div class="col-auto">
            <input class="form-control-sm float-end" type="text" list="CorporationName" name="CorporationName" placeholder="회사를 검색하세요." />
            <datalist id="CorporationName">
                <option value="LG 에너지 솔루션"></option>
                <option value="삼성전자"></option>
                <option value="현대자동차"></option>
                <option value="우아한형제들"></option>
                <option value="SK 하이닉스"></option>
                <option value="카카오"></option>
                <option value="한국전력공사"></option>
                <option value="기아"></option>
                <option value="쿠팡"></option>
                <option value="농심"></option>
                <option value="빙그레"></option>
                <option value="아모레퍼시픽"></option>
                <option value="토스"></option>
            </datalist>
        </div>

    </div>
    <br />
    <br />


    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="UserId" class="control-label">아이디 : </label>
        </div>
        <div class="col-auto">
            <input asp-for="UserId" class="form-control" value="@ViewBag.UserId"  />
        </div>

        <div class="col-auto">
            <label asp-for="Name" class="control-label">이름 : </label>
        </div>
        <div class="col-auto">
            <input asp-for="Name" class="form-control" value="@ViewBag.UserName" />
        </div>

        <div class="col-auto">
            <label asp-for="Gender" class="control-label">성별 : </label>
        </div>
        <div class="col-auto">
            <input asp-for="Gender" class="form-control" value="@ViewBag.UserGender" />
        </div>

        <div class="col-auto">
            <label asp-for="Hp" class="control-label">연락처 : </label>
        </div>
        <div class="col-auto">
            <input asp-for="Hp" class="form-control" value="@ViewBag.UserPhoneNumber" />
        </div>
    </div>

    <br />
    <br />

    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Education">학력 사항</label>
                <textarea id="Education" name="Education" rows="5" cols="150" placeholder="학력 사항을 기재해주세요." required></textarea>
                <br />
            </div>
            <div class="form-group">
                <label for="Certificate">자격 사항</label>
                <textarea id="Certificate" name="Certificate" rows="5" cols="150" placeholder="자격 사항을 기재해주세요." required></textarea>
                <br />
            </div>
            <div class="form-group">
                <label for="Cl">자기 소개서를 기재해주세요.</label>
                <textarea id="Cl" name="Cl" rows="5" cols="150" placeholder="200자 이내의 자기소개서를 작성해주세요." required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="ResumeWrite" name="submitButton" value="이력서 제출" class="btn btn-primary" />
                <input type="submit" asp-action="ResumeWrite" name="submitButton" value="엑셀로 저장" class="btn btn-success" />
                <a asp-action="Corporation" class="btn btn-outline-danger">기업 목록 돌아가기</a>
            </div>
        </div>
    </div>
</form>