@model WebAppDiary.Models.DiaryClass

@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-4">
            <form asp-action="Add" class="custom-form">

                <label asp-for="Writer">일기 작성자:</label>
                <input asp-for="Writer"
                       class="form-control" />
                <br />

                <label for="Title">제목:</label>
                <textarea id="Title" name="Title" rows="1" cols="52" required></textarea>
                <br />

                <label for="Contents">내용:</label>
                <textarea id="Contents" name="Contents" rows="10" cols="52" required></textarea>
                <br />

                <div class="row justify-content-center mt-5">
                    <input type="submit" value="일기 저장"
                           class="btn btn-success" />
                </div>
            </form>

        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
